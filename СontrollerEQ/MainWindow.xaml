<Window x:Class="СontrollerEQ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:СontrollerEQ"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowState="Maximized" >
    <Grid Margin="20,20,20,20" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Width="300">
            <Grid Margin="0,25,0,0" Background="#002" Width="300" Height="175" VerticalAlignment="Center">
                <TextBlock FontFamily="Aria" FontSize="30" Foreground="#fff" Margin="10,10,10,10" HorizontalAlignment="Center">
                   Окно:
                </TextBlock>
                <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Foreground="#aff" FontSize="60" TextAlignment="Center" x:Name="WindowName">
                           ---
                    </TextBlock>
                </WrapPanel>
            </Grid>
        </Grid>

        <WrapPanel Grid.Row="1" Width="300">
            <Grid Margin="0,25,0,0" Background="Brown" Width="300" Height="50" VerticalAlignment="Center" x:Name="Call">
                <Button Background="Brown" Click="Button_Click">
                    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontSize="25" TextAlignment="Center" Foreground="White">
                          Вызвать
                        </TextBlock>
                    </WrapPanel>
                </Button>
            </Grid>
            <Grid Margin="0,25,0,0" Background="ForestGreen" Width="200" Height="50" VerticalAlignment="Center" Visibility="Collapsed" x:Name="StartServicing">
                <Button Background="ForestGreen" Click="StartServicing_Click">
                    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontSize="16" TextAlignment="Center" Foreground="White">
                               Начать обслуживание
                        </TextBlock>
                    </WrapPanel>
                </Button>
            </Grid>
            <Grid Margin="10,25,0,0" Background="Red" Width="90" Height="50" VerticalAlignment="Center"  x:Name="DidntUp" Visibility="Collapsed">
                <Button Background="Red" Click="DidntUp_Click">
                    <WrapPanel  HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontSize="16" TextAlignment="Center" Foreground="White">
                             Не явился
                        </TextBlock>
                    </WrapPanel>
                </Button>
            </Grid>
        </WrapPanel>

        <Grid Grid.Row="2" Width="300">
            <Grid Margin="0,25,0,0" Background="Brown" Width="300" Height="50" VerticalAlignment="Center">
                <Button Background="Brown" Click="Button_Click_1">
                    <WrapPanel Grid.Column="0"  HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontSize="25" TextAlignment="Center" Foreground="White">
                          Передать
                        </TextBlock>
                    </WrapPanel>
                </Button>
            </Grid>
        </Grid>

        <Grid Grid.Row="3" Width="300">
            <Grid Margin="0,25,0,0" Background="Brown" Width="300" Height="50" VerticalAlignment="Center">
                <Button Background="Brown" Click="Button_Click_2">
                    <WrapPanel Grid.Column="0"  HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontSize="25" TextAlignment="Center" Foreground="White">
                          Отложить
                        </TextBlock>
                    </WrapPanel>
                </Button>
            </Grid>
        </Grid>

        <Grid Grid.Row="4" Width="300">
            <Grid Margin="0,25,0,0" Background="Brown" Width="300" Height="50" VerticalAlignment="Center">
                <Button Background="Brown" Click="Button_Click_3">
                    <WrapPanel Grid.Column="0"  HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontSize="25" TextAlignment="Center" Foreground="White">
                          Завершить
                        </TextBlock>
                    </WrapPanel>
                </Button>
            </Grid>
        </Grid>

        <Grid Grid.Row="5" Width="300">
            <Grid Margin="0,25,0,0" Background="Brown" Width="300" Height="50" VerticalAlignment="Center">
                <Button Background="Brown">
                    <WrapPanel Grid.Column="0"  HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontSize="20" TextAlignment="Center" Foreground="White">
                          Предварительная запись
                        </TextBlock>
                    </WrapPanel>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
